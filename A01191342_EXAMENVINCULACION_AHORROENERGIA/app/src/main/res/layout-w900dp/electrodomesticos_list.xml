<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="itesm.mx.a01191342_examenvinculacion_ahorroenergia.ElectrodomesticosListActivity">

    <!--
    This layout is a two-pane layout for the Items
    master/detail flow.

    -->

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/electrodomesticos_list"
        android:name="itesm.mx.a01191342_examenvinculacion_ahorroenergia.ElectrodomesticosListFragment"
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="itesm.mx.a01191342_examenvinculacion_ahorroenergia.ElectrodomesticosListActivity"
        tools:listitem="@layout/electrodomesticos_list_content" />

    <FrameLayout
        android:id="@+id/electrodomesticos_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
