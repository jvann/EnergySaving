<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_detalle_electro"
    tools:context="itesm.mx.a01191342_examenvinculacion_ahorroenergia.ElectroDetail">

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <ImageView
        android:id="@+id/image_electro_detail"
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        app:srcCompat="@drawable/meditation" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/text_detail_electro"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Electrodomestico"
        android:textAlignment="center"
        android:textColor="@color/colorTextToolbar"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/text_kwh_detail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="KWH"
        android:textAlignment="center"
        android:textColor="@color/colorTextToolbar"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>
