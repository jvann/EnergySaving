<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="itesm.mx.a01191342_examenvinculacion_ahorroenergia.MainActivity">

    <TextView
        android:id="@+id/text_electrodomesticos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Electrodomesticos"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <fragment
        android:id="@+id/fragment_electrodomesticos"
        class="itesm.mx.savedenergy.ElectrodomesticsFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/text_eventos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.14"
        android:text="Eventos"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <fragment
        android:id="@+id/fragment_eventos"
        class="itesm.mx.savedenergy.EventsFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1" />

</LinearLayout>
